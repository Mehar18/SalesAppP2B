<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtCoupon"
        android:layout_width="wrap_content"
        android:ems="12"
        android:background="@drawable/table_content_cell_bg"
        android:layout_height="match_parent"
        android:text="Coupon"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtCouponType"
        android:layout_width="wrap_content"
        android:ems="11"
        android:background="@drawable/table_content_cell_bg"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Type"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAmountCoupon"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Amount"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/CourseCoupon"
        android:layout_width="180dp"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:layout_height="match_parent"
        android:text="Course"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtEmployeeCoupon"
        android:textAlignment="center"
        android:background="@drawable/table_content_cell_bg"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="Employee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAddedByCoupon"
        android:textAlignment="center"
        android:layout_width="190dp"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:layout_height="match_parent"
        android:text="Added by"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtUsedCoupon"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:layout_height="match_parent"
        android:text="Amount"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/StatusCoupon"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_thumb_up_alt_24"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/table_content_cell_bg"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/txtMaxUsage"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Max usage"
        android:textSize="18sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
           android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/editImgCoupon"/>

    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/editImgCoupon"-->
<!--        android:layout_width="46dp"-->
<!--        android:background="@drawable/border"-->
<!--        android:layout_height="match_parent" />-->





</LinearLayout>