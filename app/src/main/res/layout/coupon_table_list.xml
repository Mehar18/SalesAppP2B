<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtCoupon"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:text="Coupon"
        android:background="@drawable/border"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtCouponType"
        android:layout_width="125dp"
        android:text="Type"
        android:background="@drawable/border"
        android:textAlignment="center"
        android:layout_height="match_parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAmountCoupon"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Amount"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/CourseCoupon"
        android:layout_width="180dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Course"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtEmployeeCoupon"
        android:textAlignment="center"
        android:layout_width="86dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Employee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAddedByCoupon"
        android:textAlignment="center"
        android:layout_width="86dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Added by"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtUsedCoupon"
        android:textAlignment="center"
        android:layout_width="86dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Amount"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/StatusCoupon"
        android:textAlignment="center"
        android:layout_width="46dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Status"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMaxUsage"
        android:textAlignment="center"
        android:layout_width="86dp"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:text="Amount"
        android:textSize="18sp" />

<!--    <ImageView-->
<!--        android:id="@+id/editImgCoupon"-->
<!--        android:layout_width="46dp"-->
<!--        android:background="@drawable/border"-->
<!--        android:layout_height="match_parent" />-->

    <com.google.android.material.button.MaterialButton
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:icon="@drawable/ic_baseline_edit_24"
        android:backgroundTint="@color/dark_purple"
        android:id="@+id/editBtnCoupon"/>



</LinearLayout>