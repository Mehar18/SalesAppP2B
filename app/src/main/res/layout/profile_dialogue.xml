<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        android:id="@+id/profileLinearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tech Team"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/userName"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="techteacm@gmail.com"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/userEmail"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  My profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/myProfileTxt"
            android:textSize="18dp"
           android:drawableLeft="@drawable/ic_baseline_manage_accounts_24"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Change password"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:id="@+id/changePasswordTxt"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_baseline_edit_note_24"/>
    </LinearLayout>





</LinearLayout>